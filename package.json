{
  "name": "starter-project",
  "version": "1.0.0",
  "scripts": {
    "build:css": "npm run lint:css && node-sass src/sass/main.scss --follow --output-style compressed | postcss --use autoprefixer --no-map -o appengine/static/main.min.temp.css",
    "build:js": "rollup -c",
    "build": "npm run clean && npm run build:js && npm run build:css",
    "clean": "rm -rf dist/*",
    "debug:css": "npm run lint:css && node-sass src/sass/main.scss --follow --output-style compressed | postcss --use autoprefixer -o appengine/static/main.min.temp.css --map file",
    "debug:js": "rollup -c --configDebug --silent",
    "lint:css": "stylelint src/sass/**/*.scss",
    "lint:js": "eslint src/js/**/*.js",
    "start": "run-p watch:**",
    "watch:css": "watch 'npm run debug:css' src/sass",
    "watch:js": "watch 'npm run debug:js' src/js"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "rules": {
      "comma-dangle": 0,
      "no-multi-spaces": 0,
      "semi": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 3
        }
      ],
      "object-curly-spacing": [
        "error",
        "always",
        {
          "objectsInObjects": false,
          "arraysInObjects": false
        }
      ],
      "arrow-parens": 0,
      "max-len": [
        "error",
        200
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "all"
        }
      ],
      "dot-location": 0,
      "quotes": [
        2,
        "single"
      ],
      "key-spacing": [
        "error",
        {
          "mode": "minimum"
        }
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "eslint": "^8.14.0",
    "eslint-config-google": "^0.14.0",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.1.0",
    "rollup": "^2.72.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^14.8.2",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "watch": "^1.0.2"
  }
}
